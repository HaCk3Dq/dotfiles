[color]
  diff = auto
  status = auto
  branch = auto
  ui = true

[core]
  editor = nvim
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  side-by-side = true

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[commit]
  gpgsign = true

[init]
  defaultBranch = master

[pull]
  rebase = true

[alias]
  lg = "log --date=format:%c --pretty=format:'%C(blue)%h%C(reset) - %C(green)%ad%C(reset) %s %C(bold blue)<%an>%C(reset)' --abbrev-commit"
