[colors]
  background = #E1263238
  background-alt = #E1444444
  foreground = #dfdfdf
  foreground-alt = #555
  primary = #E13399ff
  secondary = #3399ff
  alert = #FF4444
  notify = #E1B86A74

[bar/default]
  font-0 = DroidSansM Nerd Font:pixelsize=10;3
  font-1 = FontAwesome:pixelsize=13;3
  font-2 = DroidSansM Nerd Font:pixelsize=13;3
  font-3 = unifont:fontformat=truetype:size=8:antialias=false;1

  width = 100%
  height = 25
  offset-x = 0%
  offset-y = 0%
  radius = 4.0
  fixed-center = true

  background = ${colors.background}
  foreground = ${colors.foreground}

  line-size = 3
  line-color = #f00

  border-size = 4
  border-color = #00000000

  padding-left = 0
  padding-right = 0

  module-margin-left = 1
  module-margin-right = 2

  modules-left = i3
  modules-center = date
  modules-right = spotify volume bluetooth cpu memory filesystem xkeyboard battery

  tray-position = right
  tray-padding = 5
  tray-background = ${colors.background}

  cursor-click = pointer

[module/xkeyboard]
  type = internal/xkeyboard

  label-layout = %layout%

  label-indicator-padding = 2
  label-indicator-margin = 1
  label-indicator-background = ${colors.secondary}
  label-indicator-underline = ${colors.secondary}

[module/spotify]
  type = custom/script
  interval = 1
  format = <label>
  exec = python ~/dotfiles/spotify.py

[module/bluetooth]
  type = custom/script
  interval = 1
  format = <label>
  exec = python ~/dotfiles/bt.py

[module/battery]
  type = internal/battery
  full-at = 98

  format-charging = <label-charging>
  format-discharging = <ramp-capacity> <label-discharging>
  format-full = <ramp-capacity>

  ramp-capacity-0 = %{T2}%{T-}
  ramp-capacity-1 = %{T2}%{T-}
  ramp-capacity-2 = %{T2}%{T-}
  ramp-capacity-3 = %{T2}%{T-}
  ramp-capacity-4 = %{T2}%{T-}

  label-charging = %{T3}%{T-} %percentage%%
  label-discharging = %percentage%%

[module/i3]
  type = internal/i3
  format = <label-state> <label-mode>
  index-sort = true

  ws-icon-0 = 1;
  ws-icon-1 = 2;
  ws-icon-2 = 3;
  ws-icon-3 = 4;
  ws-icon-4 = 5;
  ws-icon-5 = 6;

  label-mode-padding = 2
  label-mode-background = ${colors.primary}

  label-focused = %{T2}%icon%%{T-}
  label-focused-background = ${colors.background-alt}
  label-focused-underline = ${colors.primary}
  label-focused-padding = 2

  label-unfocused = %{T2}%icon%%{T-}
  label-unfocused-padding = 2

  label-visible = %{T2}%icon%%{T-}
  label-visible-padding = 2

  label-urgent = %{T2}%icon%%{T-}
  label-urgent-background = ${colors.notify}
  label-urgent-padding = 2

[module/cpu]
  type = internal/cpu
  interval = 2
  label = %{T3} %{T-}%percentage:2%%

[module/memory]
  type = internal/memory
  interval = 2
  label = %{T3} %{T-}%percentage_used:2%%

[module/filesystem]
  type = internal/fs
  warn-percentage = 75

  format-mounted = <label-mounted> 
  label-mounted = %{T2} %{T-}%percentage_used:2%%

  format-warn = <label-warn>
  label-warn = %{T2} %{T-}%percentage_used:2%%
  label-warn-foreground = ${colors.alert}

[module/date]
  type = internal/date
  interval = 5
  enable-click = false

  date = "%a %d.%m"
  time = %H:%M

  label = %date%  %time%

[module/volume]
  type = internal/pulseaudio

  format-volume = <label-volume>  <bar-volume>
  label-volume = 
  label-volume-font = 4

  format-muted-foreground = ${colors.foreground-alt}
  label-muted = sound muted

  bar-volume-width = 10
  bar-volume-foreground-0 = #55aa55
  bar-volume-foreground-1 = #55aa55
  bar-volume-foreground-2 = #55aa55
  bar-volume-foreground-3 = #55aa55
  bar-volume-foreground-4 = #f5a70a
  bar-volume-foreground-5 = #f5a70a
  bar-volume-foreground-6 = #ff5555
  bar-volume-gradient = false
  bar-volume-indicator = |
  bar-volume-indicator-font = 4
  bar-volume-fill = ─
  bar-volume-fill-font = 4
  bar-volume-empty = ─
  bar-volume-empty-font = 4
  bar-volume-empty-foreground = ${colors.foreground-alt}

[settings]
  screenchange-reload = true

