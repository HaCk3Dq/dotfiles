  foreground = #dfdfdf
  foreground-alt = #555
  primary = #E13399ff
  secondary = #3399ff
  alert = #E1B86A74

[bar/default]
  font-0 = Droid Sans Mono:pixelsize=10;3
  font-1 = unifont:fontformat=truetype:size=8:antialias=false;1
  font-2 = siji:pixelsize=10;0
  font-3 = Font Awesome 5 Brands:pixelsize=13;3
  font-4 = FontAwesome:pixelsize=13;3

  width = 100%
